<Window x:Class="KevinsMailOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KevinsMailOrganizer"
        mc:Ignorable="d"
        Title="Riksbanken Mail Organizer" Height="614" Width="402" ResizeMode="NoResize" Background="#FFF0F0F0" BorderBrush="#FF3F3F46" Foreground="#FF3F3F46">

    <Grid Background="#FFF0F0F0">

        <Button x:Name="btn_Open" Content="Open" HorizontalAlignment="Left" Margin="0,545,0,0" VerticalAlignment="Top" Width="96" BorderBrush="#FFF0F0F0" Height="30" Background="Gray" Padding="0" Foreground="White" Click="btn_Open_Click" />

        <TreeView x:Name="tV_template_box" HorizontalAlignment="Left" Height="516" VerticalAlignment="Top" Width="386" BorderBrush="#FFF0F0F0" HorizontalContentAlignment="Center" Background="#FFF0F0F0" Foreground="#FF1C1C1C" Margin="0,29,0,0"/>

        <Button x:Name="btn_Refresh" Content="Refresh" HorizontalAlignment="Left" Margin="96,545,0,0" VerticalAlignment="Top" Width="96" BorderBrush="#FFF0F0F0" Height="30" Background="Gray" Padding="0" Foreground="White" Click="btn_Refresh_Click" />
        <Button x:Name="btn_Help" Content="Help" HorizontalAlignment="Left" Margin="192,545,0,0" VerticalAlignment="Top" Width="96" BorderBrush="#FFF0F0F0" Height="30" Background="Gray" Padding="0" Foreground="White" />
        <Button x:Name="btn_Help_Copy" Content="Exit" HorizontalAlignment="Left" Margin="288,545,0,0" VerticalAlignment="Top" Width="98" BorderBrush="#FFF0F0F0" Height="30" Background="Gray" Padding="0" Foreground="White" Click="btn_Help_Copy_Click" />
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Add"/>
                    <MenuItem Header="_Refresh"/>
                    <MenuItem Header="_Exit"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_Info"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
    </Grid>
</Window>
